
<link rel="stylesheet" href="~/css/Login.css">

<div id="login_form">
    
    <form id="input_form">
        <div style="text-align: center">
            Авторизация             
        </div>
        <input placeholder="Введите логин Moodle " id="input_login">
        <button class="button" id="button_login">Войти</button>

    </form>
</div>
