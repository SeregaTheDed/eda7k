</div>






@section scripts
    {
    
    <script>
        $(document).ready(function () {
            $('#button_login').click(function (e) {
                e.preventDefault();
                var btn = $(this);
                $.ajax({
                    method: "POST",
                    url: "/account/login",
                   data: { login : $('#input_login').val()},
                   success: function (data) {
                        $("#textbox").text($("#textbox").text() + " " +data);
                        window.location.replace("../home");
                        },
                   error: function (er) {
                        console.log(er);
                        console.log(123);
                        }
                });
            })
        });
    </script>
}
